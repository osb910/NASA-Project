{
  "name": "nasa-project",
  "version": "1.0.0",
  "description": "NASA Mission Control",
  "main": "src/server.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "test": "jest --detectOpenHandles && cd client npm test",
    "test-watch": "jest --watch",
    "watch": "nodemon src/server.js & npm run client",
    "start": "node src/server.js",
    "cluster": "pm2 start src/server.js -i max",
    "install-all": "npm install && cd client && npm install",
    "server": "npm run watch",
    "client": "cd client && npm start",
    "deploy": "cd client && npm run build && npm start",
    "deploy-cluster": "cd client && npm run build & npm run cluster"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "serve": "^14.0.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.2.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "fs": "^0.0.1-security",
    "mongoose": "^6.5.1",
    "morgan": "^1.10.0",
    "pm2": "^5.2.0"
  },
  "devDependencies": {
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "npm-run-all": "^4.1.5"
  }
}
